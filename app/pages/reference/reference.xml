<page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:drawer="nativescript-ui-sidedrawer" xmlns:widgets="shared/widgets" xmlns:lv="nativescript-telerik-ui/listview" xmlns:statusbar="nativescript-statusbar" loaded="onPageLoad">
    <statusbar:StatusBar ios:barStyle="light" />
    <page.actionBar>
        <action-bar title="Reference">
            <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
            <action-bar.actionItems>
                <ios>
                    <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
                    <action-item ios.systemIcon="13" ios.position="right" tap="refreshMe" />
                </ios>
            </action-bar.actionItems>
        </action-bar>
    </page.actionBar>
    <drawer:RadSideDrawer id="drawer">
        <drawer:RadSideDrawer.mainContent>
            <ListView id="listview" items="{{ myItems }}" itemTap="onItemTap" loaded="contentLoaded" separatorColor="#000000">
                <ListView.itemTemplate>
                    <GridLayout columns="75,*" rows="*">
                        <Label text="&#xeadf;" class="icon" row="0" col="0" style="text-align: center; vertical-align: center; color: #fff; font-size: 20; background-color: #f1582c;"/>
                        <Label text="{{_filename}}" textAlignment="right" fontAttributes="Bold" style="text-align: left; vertical-align: center; font-size: 14;" color="{{global.brand.PrimaryTextColor}}" row="0" col="1"/>
                    </GridLayout>
                </ListView.itemTemplate>
            </ListView>
            <lv:RadListView.footerItemTemplate>
 
</lv:RadListView.footerItemTemplate>
        </drawer:RadSideDrawer.mainContent>
        <drawer:RadSideDrawer.drawerContent>
            <widgets:drawer-content />
        </drawer:RadSideDrawer.drawerContent>
    </drawer:RadSideDrawer>
</page>