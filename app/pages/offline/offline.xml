<page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:drawer="nativescript-ui-sidedrawer" xmlns:widgets="shared/widgets" xmlns:lv="nativescript-telerik-ui/listview" xmlns:statusbar="nativescript-statusbar" loaded="onPageLoad">
    <statusbar:StatusBar ios:barStyle="light" />
    <page.actionBar>
        <action-bar title="Offline">
            <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
            <action-bar.actionItems>
                <ios>
                    <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
                    <action-item ios.systemIcon="4" ios.position="right" tap="addMe" />
                    <action-item ios.systemIcon="13" ios.position="right" tap="syncMe" />

                </ios>
            </action-bar.actionItems>
        </action-bar>
    </page.actionBar>
    <drawer:RadSideDrawer id="drawer">
        <drawer:RadSideDrawer.mainContent>
            <ListView id="listview" items="{{ myItems }}" loaded="contentLoaded" separatorColor="#000000">
                <ListView.itemTemplate>
                    <GridLayout columns="75,*" rows="*">
                        <Label text="&#xe971;" class="icon" row="0" col="0" style="text-align: center; vertical-align: center; color: #fff; font-size: 20; background-color: #f1582c;"/>
                    <StackLayout orientation="vertical" textAlignment="right" row="0" col="1">
                        <Label text="{{ accountname, accountname }}" textAlignment="right" fontAttributes="Bold" />
                       <Label text="{{ accountcompany, accountcompany }}" textAlignment="right" style="font-size:15px"/>
                    </StackLayout>
                    </GridLayout>
                </ListView.itemTemplate>
            </ListView>
            <lv:RadListView.footerItemTemplate>
 
</lv:RadListView.footerItemTemplate>
        </drawer:RadSideDrawer.mainContent>
        <drawer:RadSideDrawer.drawerContent>
            <widgets:drawer-content />
        </drawer:RadSideDrawer.drawerContent>
    </drawer:RadSideDrawer>
</page>